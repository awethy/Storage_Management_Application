@page
@model Storage_Management_Application.Pages.BalancePageModel
@{
    ViewData["Title"] = "Баланс";
}

<h2 class="text-center mb-4">Баланс</h2>

<form method="get" class="mb-3">
    <div class="row ">
        <div class="form-group col-md-4">
            <select name="SelectedResourceId" class="form-control">
                <option value="">--Ресурсы--</option>
                @foreach (var res in Model.Resources)
                {
                    if (res.Id == Model.SelectedResourceId)
                    {
                        <option value="@res.Id" selected>
                            @res.Name
                        </option>
                    }
                    else
                    {
                        <option value="@res.Id">
                            @res.Name
                        </option>
                    }
                }
            </select>
        </div>
        <div class="form-group col-md-4">
            <select name="SelectedUnitId" class="form-control">
                <option value="">--Ед.Изм.--</option>
                @foreach (var unit in Model.Units)
                {
                    if (unit.Id == Model.SelectedUnitId)
                    {
                        <option value="@unit.Id" selected>
                            @unit.Name
                        </option>
                    }
                    else
                    {
                        <option value="@unit.Id">
                            @unit.Name
                        </option>
                    }
                }
            </select>
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary mt-2">Фильтровать</button>
</form>

<div id="activeBalancesSection">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Наименование</th>
                <th>Ед. изм.</th>
                <th>Количество</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Balances != null && Model.Balances.Any())
            {
                foreach (var balance in Model.Balances)
                {
                    <tr class="selectable-row">
                        <td>@balance.Resource.Name</td>
                        <td>@balance.UnitsOM.Name</td>
                        <td>@balance.Quantity</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">Нет данных</td>
                </tr>
            }
        </tbody>
    </table>
</div>